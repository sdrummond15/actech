<?xml version="1.0" encoding="utf-8"?>
<extension
        type="module"
        version="3"
        client="site"
        method="upgrade">
    <name>mod_works</name>
    <author>Wanderson Alves</author>
    <creationDate>04/2021</creationDate>
    <copyright>Copyright (C) - 2021 - Sdrummond Soluções em Tecnologia. All rights reserved.</copyright>
    <license>GNU General Public License version 2 or later; see LICENSE.txt</license>
    <authorEmail>wanderson@sdrummond.com.br</authorEmail>
    <authorUrl>www.sdrummond.com.br</authorUrl>
    <version>1.0.0</version>
    <description>MOD_WORKS_XML_DESCRIPTION</description>
    <files>
        <filename module="mod_works">mod_works.php</filename>
        <folder>tmpl</folder>
        <filename>helper.php</filename>
        <filename>index.html</filename>
        <filename>mod_works.xml</filename>
    </files>
    <config>
        <fields name="params">
            <fieldset name="module_settings" label="Configurações">
                <field 
                    name="button"
                    type="textarea"
                    description="Texto botão"
                    label="Botão"
                    default=""
                    filter="raw"
                />
                <field 
                    name="icon"
                    type="media"
                    description="Icone"
                    label="Icone para o botão"
                />
                <field 
                    name="menu" 
                    type="menuitem" 
                    label="Menu" 
                    description="Menu que será redirecionado"
                    filter="integer"
                />
            </fieldset>
            <fieldset name="advanced">
                <field name="moduleclass_sfx" type="text" label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
                       description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC"/>
            </fieldset>
        </fields>
    </config>
</extension>